@model List<VeraDAL.Models.UserRepo>
	<button onclick="ShowUserModal()" class="btn btn-primary rounded-4 " style=" margin-bottom: 10px;  width: 100%;  font-size: large;"> Kullanıcı Ekle </button>
<table class="table table-striped table-bordered table-hover" id="sample_1">
	
	<thead>
		<tr>
			<th></th>
			<th></th>
			<th>Kullanıcı Kodu</th>
			<th>Adı</th>
			<th>Soyadı</th>
			<th>Şirket</th>
			<th>Yetki</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
		<tr>
			<td><a onclick="GetUserIdForDisplaying(@item.Id)"><i style="color:green; margin-left: 25px;margin-top: 7px;" class="fa fa-edit fa-lg"></i> </a></td> 
			<td><a onclick="DeleteUser(@item.Id)"><i style="color:red; margin-left: 25px;margin-top: 7px;" class="fa fa-trash  fa-lg"></i> </a></td> 
			<td>@item.UserCode </td>
			<td>@item.Name</td>
			<td>@item.Surname</td>
			<td>@item.CompanyName</td>
			<td>@item.Authorization </td> 
		</tr>
		}

	</tbody>
</table>

<script>
	$("#sample_1").dataTable({
		"language": {
			"url": "https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
		}
	});
</script>

