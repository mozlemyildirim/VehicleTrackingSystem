@model List<VeraDAL.Models.CompanyRepo>

<table class="table table-striped table-bordered table-hover exampleTable" id="exampleCompanylist" style="border:solid; border-color:lightgray">
    <thead>
        <tr>
			<th><b></b></th>
			<th><b></b></th>
			<th><b></b></th>
            <th> Şirket Kodu </th>
            <th> Şirket </th>
            <th> Bayi Adı </th>
            <th> Mobil Sayısı </th>
            <th> Adres 1 </th>
            <th> Telefon </th>
            <th> Yetkili Kişi </th>
            <th> Yetkili Kişi Mail </th>
            <th> Yetkili Kişi Telefon </th>
            <th> İş Ortağı </th>
            <th> Platform </th>
            <th> Sektör </th>
            <th> Kullanım Durumu </th>
            <th> Alarm SMS </th>
            <th> Şifre Kontrol </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
		<tr>
			<td><a href="javascript:GetCompanyByIdForDisplaying(@item.Id)"><i style="color:green; margin-left: 30px;margin-top: 12px;" class="fa fa-edit fa-2x"></i></a></td>
			<td><a href="javascript:DeleteCompany(@item.Id)"><i style="color:red; margin-left: 10px;margin-top: 12px;" class="fa fa-trash-o fa-2x"></i></a></td>
			<td><a onclick="GetUserList(@item.Id)"><i style="color:darkslateblue; margin-left: 20px;margin-top: 12px;"class="fa fa-user fa-2x"></i></a> </td>
			<td>@item.CompanyCode</td>
			<td> @item.CompanyDescription</td>
			<td> @item.Distributor</td>
			<td> @item.DeviceNumberOfCompany </td>
			<td> @item.Address1 </td>
			<td> @item.Phone </td>
			<td> @item.UserName </td>
			<td> @item.UserEmail</td>
			<td> @item.UserTelephone</td>
			<td> @item.CompanyPartner </td>
			<td> @item.PlatformName </td>
			<td> @item.SectorName </td>
			<td> @(item.Status == 1 ? "Aktif" : "Pasif") </td>
			<td> @(item.AlarmSms == true ? "Aktif" : "Pasif") </td>
			<td> @(item.PasswordControl == true ? "Aktif" : "Pasif") </td>
		</tr>
        }
    </tbody>
</table>

<script>
    
        $(document).ready(function () {
        $('#exampleCompanylist').DataTable({
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            },
            "pageLength": 10,
            "lengthChange": false,
            "retrieve": true,
            "export": true,
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5', 
            ]
        });
    });
