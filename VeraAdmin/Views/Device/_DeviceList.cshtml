@model List<VeraDAL.Models.DeviceRepo>
 

<table class="table table-striped table-bordered table-hover exampleTable" id="exampleDevicelist" style="border:solid; border-color:lightgray">
	<thead>
		<tr>
			<th> </th>
			<th> </th>
			@*<th>Ayarlar</th>*@
		 

			<th> Mobil ID </th>
			<th> Şirket </th>
			<th> Plaka </th>
			<th> Cihaz ID(Comm_id) </th>
			<th> Cihaz Gsm No </th>
			<th> IMEI No </th>
			<th> Avea Plaka </th>
			<th> Terminal Protokol </th>
			<th> Gateway </th>
			<th> Terminal Tipi </th>
			<th> Yazılım Versiyonu </th>
			<th> Odometre Durumu </th>
			<th> Programlanan Konum Mesafe(mt) </th>
			<th> Programlanan Hız Limiti(km) </th>
			<th> Programlanan Bekleme(dk) </th>
			<th> Programlanan HeartBeat(sn) </th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td><center><a href="javascript:GetDeviceById(@item.Id)"><i style="color:green;  " class="fa fa-edit fa-lg"></i></a></center></td>
				<td><center><a href="javascript:DeleteDevice(@item.Id)"><i style="color:red;" class="fa fa-trash-o fa-lg"></i></a></center></td>
                @*<td><a  href="javascript:;" onclick="showSubMenu(@item.Id,this)"><i style="color:blue; margin-left: 20px;margin-top: 12px;" class="fa fa-cogs fa-2x"></i></a>  </td>*@ 
				

				<td> @item.Id </td>
				<td> @item.CompanyName </td>
				<td> @item.CarPlateNumber </td>
				<td> @item.DeviceId</td>
				<td> @item.DeviceGsmNumber </td>
				<td> @item.IMEINumber </td>
				<td> @(item.AveaPlaka==null?"":item.AveaPlaka) </td>
				<td> @item.TerminalProtocol </td>
				<td> @item.Gateway </td>
				<td> @item.TerminalType </td>
				<td> @item.SoftwareVersion </td>
				<td> @item.OdometreTypeName </td>
				<td> @item.ProgrammedLocationDistance </td>
				<td> @item.ProgrammedSpeedLimit </td>
				<td> @item.ProgrammedWaitingTime </td>
				<td> @item.ProgrammedHeartBeat </td>
			</tr>
		}

	</tbody>
</table>

<script>
    
       $(document).ready(function () {
        $('#exampleDevicelist').DataTable({
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            },
            "pageLength": 10,
            "lengthChange": false,
            "retrieve": true,
            "export": true,
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5', 
            ]
        });
    });
