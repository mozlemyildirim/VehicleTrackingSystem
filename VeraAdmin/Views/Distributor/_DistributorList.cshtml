@model List<VeraDAL.Models.DistributorRepo>
<table class="table table-striped table-bordered  table-hover" id="sample_1" style="border:solid; border-color:lightgray">
	<thead>
		<tr>
			<th><b>Güncelle</b></th>
			<th><b>Sil</b></th>
			<th> Bayi Adı</th>
			<th> İş Ortağı </th>
			<th> Bayi Giriş Tarihi </th>
			<th> Bayi Çıkış Tarihi </th>
			<th> Telefon 1 </th>
			<th> Telefon 2 </th>
			<th> Fax </th>
			<th> Şehir </th>
			<th> Bayi Yetkilisi </th>
			<th> Aktiflik </th>
			<th> Bayi Kodu </th>
			<th> Adres </th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td><a href="javascript:GetDistributorByIdForDisplaying(@item.Id)"><i style="color:green; margin-left:34px; margin-top:12px;" class="fa fa-edit fa-2x"></i></a></td>
				<td><a href="javascript:DeleteDistributor(@item.Id)"><i style=" color: red;margin-left:5px; margin-top:10px;"  class="fa fa-trash-o  fa-2x"></i></a></td>
				<td> @item.Name</td>
				<td> @(item.CompanyPartner==null?"-":item.CompanyPartner)</td>
				<td> @(item.EntranceDate == null ? "-" : Convert.ToDateTime(item.EntranceDate).ToString("dd/MM/yyyy"))</td>
				<td> @(item.ExitDate == null ? "-" : Convert.ToDateTime(item.ExitDate).ToString("dd/MM/yyyy"))</td>
				<td> @item.Phone1</td>
				<td> @item.Phone2</td>
				<td> @item.Fax</td>
				<td> @item.City</td>
				<td> @item.PersonInCharge</td>
				<td> @(item.Activity == true?"Aktif" : "Pasif")</td>
				<td> @item.Code</td>
				<td> @item.Address</td>
			</tr>
		} 
	</tbody> 
</table> 
